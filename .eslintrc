{
	// to see a comprehensive list of rules, go to:
	// http://eslint.org/docs/rules/

	"ecmaFeatures": {
		"arrowFunctions": true,
		"binaryLiterals": false,
		"blockBindings": true,
		"classes": false,
		"defaultParams": false,
		"destructuring": true,
		"forOf": false,
		"generators": false,
		"modules": false,
		"objectLiteralComputedProperties": false,
		"objectLiteralDuplicateProperties": false,
		"objectLiteralShorthandMethods": true,
		"objectLiteralShorthandProperties": true,
		"octalLiterals": false,
		"regexUFlag": false,
		"regexYFlag": false,
		"restParams": true,
		"spread": true,
		"superInFunctions": false,
		"templateStrings": true,
		"unicodeCodePointEscapes": false,
		"globalReturn": false,
		"jsx": false                    
	},

	"env": {
		"browser": true,
		"node": true,
		"amd": false,
		"mocha": false,
		"jasmine": false,
		"phantomjs": false,
		"jquery": false,
		"prototypejs": false,
		"shelljs": false,
	},

	"globals": {
		"mainWindow": true,
		"Eve": true,
		"log": true,
		"fs": true,
		"remote": true,
		"app": true,
		"ipc": true,
		"Menu": true,
		"MenuItem": true,
		"dialog": true,
		"path": true,
		"https": true,
		"Eve": true,
		"util": true,
		"exec": true,
		"_": true,
		"fang": true,
		"dom": true,
		"CodeMirror": true,
		"Global": true,
		"QTS": true,
		"UserPreferences": true,
		"PersistentData": true,
		"Brands": true,
		"Projects": true,
		"Files": true,
		"CodeEditor": true,
		"Preview": true,
		"PreviewCompiler": true,
		"Screenshot": true,
		"Thumbnail": true,
		"SIPS": true,
		"Hotkeys": true,
		"EditorBar": true,
		"EditorSection": true,
		"Prompter": true,
		"sass": true
	},

	"plugins": [
		// e.g. "react" (must run `npm install eslint-plugin-react` first)
	],



/////////////////////////////////////
////////////// RULES ////////////////
/////////////////////////////////////

	"rules": {
		////////// Possible Errors //////////

		"comma-dangle": 1,
		"no-cond-assign": 2,
		"no-console": 0,
		"no-constant-condition": 0,
		"no-control-regex": 1,
		"no-debugger": 0,
		"no-dupe-keys": 2,
		"no-dupe-args": 2,
		"no-empty": 2,
		"no-empty-character-class": 1, 
		"no-ex-assign": 1,
		"no-extra-boolean-cast": 2,
		"no-extra-parens": 1,
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": 1,
		"no-invalid-regexp": 1,
		"no-irregular-whitespace": 1, 	
		"no-negated-in-lhs": 1,
		"no-obj-calls": 1,
		"no-regex-spaces": 1,
		"no-sparse-arrays": 2,
		"no-unreachable": 2,
		"use-isnan": 2,
		"valid-jsdoc": 1,
		"valid-typeof": 2,
		"no-unexpected-multiline": 1,

		////////// Best Practices //////////
		"block-scoped-var": 0,
		// "block-scoped-var": 1,
		"complexity": 1,
		"consistent-return": 0,
		"curly": [1, "multi-line"],	
		"default-case": 1,
		"dot-notation": 1,
		"eqeqeq": 2,
		"guard-for-in": 1,
		"no-alert": 0,
		// "no-alert": 1,
		"no-caller": 1,
		"no-div-regex": 1,
		"no-else-return": 2,
		"no-empty-label": 1,
		"no-eq-null": 2,
		"no-eval": 2,
		"no-extend-native": 1,
		"no-extra-bind": 1,
		"no-fallthrough": 2,
		"no-floating-decimal": 1,
		"no-implicit-coercion": 2,
		"no-implied-eval": 1,
		"no-invalid-this": 2,
		"no-iterator": 1,
		"no-labels": 1,
		"no-lone-blocks": 2,
		"no-loop-func": 1,
		"no-multi-spaces": 0,
		// "no-multi-spaces": 1,
		"no-multi-str": 1,
		"no-native-reassign": 1,
		"no-new": 1,
		"no-new-func": 1,
		"no-new-wrappers": 1,
		"no-octal": 1,
		"no-octal-escape": 1,
		"no-param-reassign": 1,
		"no-process-env": 0,
		// "no-process-env": 1,
		"no-proto": 1,
		"no-redeclare": 0,
		// "no-redeclare": 1,
		"no-return-assign": 1,
		"no-script-url": 1,
		"no-self-compare": 1,
		"no-sequences": 1,
		"no-unused-expressions": 1,
		"no-useless-call": 1,
		"no-useless-concat": 1,
		"no-void": 1,
		"no-warning-comments": 1,
		"no-with": 1,
		"radix": 0,
		// "radix": 1,
		"vars-on-top": 0,
		"wrap-iife": [1, "inside"],
		"yoda": 1,


		////////// Strict Mode //////////

		// "strict": 1,


		////////// Variables //////////

		"no-catch-shadow": 0,
		"no-delete-var": 1,
		"no-label-var": 1,
		"no-shadow": 1,
		"no-shadow-restricted-names": 1, 
		"no-undef": 1,
		"no-undef-init": 1,
		"no-undefined": 1,
		// "no-unused-vars": 1,
		"no-use-before-define": [2, "nofunc"],


		////////// Node.js //////////
		"callback-return": 0,
		// "global-require ": 1,
		"handle-callback-err": 1,
		"no-mixed-requires": 1,
		"no-new-require": 1,
		"no-path-concat": 1,
		"no-process-exit": 2,
		"no-restricted-modules": 1,
		"no-sync": 2,


		////////// Stylistic Issues //////////
		"array-bracket-spacing":[2, "never"],
		"brace-style": 1,
		"camelcase": [2, {"properties":"never"}],
		"comma-spacing": [1, {
			"before":false, "after":true
		}],
		"comma-style": 1,
		"consistent-this": [1, "self"],
		"eol-last": 2,
		"func-names": 0,
		"func-style": [1, "declaration"],						
		"indent": [2, "tab"],
		"key-spacing": [1, {
			"beforeColon":false,"afterColon":true
		}],
		"max-nested-callbacks": [1, 3],
		"new-cap": 0,
		"new-parens": 1,
		"newline-after-var": 0,
		"no-array-constructor": 1,
		"no-inline-comments": 0,
		"no-lonely-if": 1,
		// "no-mixed-spaces-and-tabs": 1,
		"no-multiple-empty-lines": [1, {"max": 4}],
		"no-nested-ternary": 1,
		"no-new-object": 1,
		"no-spaced-func": 1,
		"no-ternary": 0,
		"no-unneeded-ternary": 1,
		"no-trailing-spaces": [1, {"skipBlankLines":true}],
		"no-underscore-dangle": 0,
		"object-curly-spacing":[1,"always"],
		"one-var": 0,
		"operator-assignment": [1, "always"],
		// "padded-blocks": [1, "never"],
		"quote-props": [1, "as-needed"],
		"quotes": [2, "single"],
		"semi": 2,
		"sort-vars": 0,
		"space-after-keywords": [1, "always"],
		"space-before-blocks": [1, "always"],
		"space-before-function-paren": [1, "never"], 					
		"space-in-parens": [1, "never"],
		"space-infix-ops": 1,
		"space-return-throw-case": 1,
		"space-unary-ops": [1, {"words":true, "nonwords":false}],				
		"spaced-comment": 0,
		"wrap-regex": 0,


		// ////////// ECMAScript 6 //////////
		"arrow-parens": 0,
		"arrow-spacing": 1,
		"constructor-super": 0,
		"generator-star-spacing": 0,
		"no-class-assign": 0,
		"no-const-assign": 2,
		"no-dupe-class-members": 0,
		"no-this-before-supers": 0,
		"no-var": 2,
		"object-shorthand": [1, "always"],
		"prefer-arrow-callback": 0,
		"prefer-const": 1,
		"prefer-spread": 1,
		"prefer-reflect": 0,
		"prefer-template": 0,
		"require-yield": 2,


		// ////////// Legacy //////////

		"max-depth": [1, 4], 
		// "max-len": [1, 90, 2],
		"max-len": 0,
		"max-params": 0,
		// "max-statements": [1, 8], 
		"no-bitwise": 0,
		"no-plusplus": 0
	}
}